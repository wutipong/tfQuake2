#include "basic.frag.h.fsl"

RES(Tex2D(float4), sTexture, UPDATE_FREQ_NONE, t1, binding = 0);
RES(SamplerState,  textureSampler, UPDATE_FREQ_NONE, s0, binding = 0);

float4 PS_MAIN( VSOutput In )
{
    INIT_MAIN;
    
    float4 fragmentColor = SampleTex2D(Get(sTexture), Get(textureSampler), In.texCoord) * In.color;
    if(fragmentColor.a < In.aTreshold)
        discard;

    RETURN(fragmentColor);
}
